{
  "name": "typescript-boilerplate",
  "version": "1.0.0",
  "description": "Typescript boilerplate to develop rest api with nodejs",
  "main": "index.js",
  "repository": "https://github.com/LucasMonteiroi/typescript-boilerplate.git",
  "author": "Lucas Monteiro Inacio <lmsupport@outlook.com>",
  "license": "MIT",
  "keywords": [
    "typescript",
    "node"
  ],
  "scripts": {
    "build": "tsc",
    "build:routes": "tsoa routes",
    "build:swagger": "tsoa swagger",
    "build:all": "yarn build:routes && yarn build && yarn build:swagger ",
    "start": "set NODE_ENV=production && node ./dist/src/server.js",
    "dev:server": "ts-node-dev --inspect --transpile-only --ignore-watch node_modules src/server.ts",
    "dev:typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js"
  },
  "devDependencies": {
    "@types/cors": "^2.8.8",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.7.13",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/yup": "^0.29.13",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "5.16.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "git-commit-msg-linter": "^3.0.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "ts-node": "^10.3.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.10.1",
    "tsoa": "^3.4.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "slugify": "^1.6.0",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.37",
    "typeorm-pagination": "^2.0.3",
    "uuid": "^8.3.2",
    "yup": "^0.32.9"
  }
}
